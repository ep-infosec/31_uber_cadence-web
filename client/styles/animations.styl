@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(359deg)

@keyframes slideinfromright
  0%
    transform translateX(100%)
  100%
    transform translateX(0)

@keyframes fade-in
  0%
    opacity 0
  100%
    opacity inherit

@keyframes fade-out
  0%
    opacity inherit
  100%
    opacity 0

@keyframes pop-in
  0%
    transform scale(0)
  100%
    transform scale(1)

@keyframes shrink-out
  0%
    transform scale(1)
  100%
    transform scale(0)